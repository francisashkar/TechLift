<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layoutDirection="rtl">

        <!-- 注转 专 -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="砖 砖转砖! "
            android:textDirection="rtl"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 专住 住住拽转 砖转砖 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 住住拽转 "
                    android:textAppearance="@style/TextAppearance.TechLift.Headline"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- 住  砖注专 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/totalLessonsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.TechLift.Headline"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="住  拽专住"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />
                    </LinearLayout>

                    <!-- 砖注专 砖砖 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/completedLessonsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.TechLift.Headline"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/status_completed" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="拽专住 砖砖"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />
                    </LinearLayout>

                    <!--  转拽转 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/progressPercentageTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textAppearance="@style/TextAppearance.TechLift.Headline"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转拽转"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 专爪祝  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 专爪祝 :"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/currentStreakTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 "
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 专住 住  -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/roadmapsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 拽专住 "
                    android:textAppearance="@style/TextAppearance.TechLift.Headline"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 专住 拽专住  -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/currentCourseCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" 拽专住  砖"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/currentCourseTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="拽专住 驻转 爪 拽"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/currentCourseDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HTML, CSS, JavaScript, React - 拽专住 "
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/currentCourseStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 砖"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:background="@drawable/rounded_background"
                            android:textColor="@color/status_in_progress" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 拽专住  -->
                <LinearLayout
                    android:id="@+id/currentCoursesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp" />

                <!-- 转专转 拽专住 砖砖 -->
                <TextView
                    android:id="@+id/completedCoursesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 拽专住 砖砖"
                    android:textAppearance="@style/TextAppearance.TechLift.Headline"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <!-- 拽专住 砖砖 -->
                <LinearLayout
                    android:id="@+id/completedCoursesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 专住 转拽转 砖转 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/progressCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 转拽转 砖转"
                    android:textAppearance="@style/TextAppearance.TechLift.Headline"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <ProgressBar
                    android:id="@+id/learningProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:progress="0"
                    android:progressTint="@color/accent"
                    android:max="100" />

                <TextView
                    android:id="@+id/progressDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="砖转 0 转 0 砖注专"
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 