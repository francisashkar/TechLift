<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layoutDirection="rtl">

        <!-- הודעת ברכה -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="שלום משתמש! 👋"
            android:textDirection="rtl"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- כרטיס סטטיסטיקות המשתמש -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 סטטיסטיקות למידה"
                    android:textAppearance="@style/TextAppearance.TechLift.Headline"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- סך הכל שיעורים -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/totalLessonsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.TechLift.Headline"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="סך הכל קורסים"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />
                    </LinearLayout>

                    <!-- שיעורים שהושלמו -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/completedLessonsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.TechLift.Headline"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/status_completed" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="קורסים שהושלמו"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />
                    </LinearLayout>

                    <!-- אחוז התקדמות -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/progressPercentageTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textAppearance="@style/TextAppearance.TechLift.Headline"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="התקדמות"
                            android:textSize="12sp"
                            android:textColor="@color/secondary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- רצף יומי -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔥 רצף יומי:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/currentStreakTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ימים"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- כרטיס מסלולי למידה -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/roadmapsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📚 קורסים נוכחיים"
                    android:textAppearance="@style/TextAppearance.TechLift.Headline"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- כרטיס קורס נוכחי -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/currentCourseCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🎯 הקורס הנוכחי שלך"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/currentCourseTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="קורס פיתוח צד לקוח"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/currentCourseDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HTML, CSS, JavaScript, React - קורס נוכחי"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/currentCourseStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="לא הושלם"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:background="@drawable/rounded_background"
                            android:textColor="@color/status_in_progress" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- קורסים נוכחיים -->
                <LinearLayout
                    android:id="@+id/currentCoursesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp" />

                <!-- כותרת קורסים שהושלמו -->
                <TextView
                    android:id="@+id/completedCoursesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏆 קורסים שהושלמו"
                    android:textAppearance="@style/TextAppearance.TechLift.Headline"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <!-- קורסים שהושלמו -->
                <LinearLayout
                    android:id="@+id/completedCoursesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- כרטיס התקדמות אישית -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/progressCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📈 התקדמות אישית"
                    android:textAppearance="@style/TextAppearance.TechLift.Headline"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <ProgressBar
                    android:id="@+id/learningProgressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:progress="0"
                    android:progressTint="@color/accent"
                    android:max="100" />

                <TextView
                    android:id="@+id/progressDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="השלמת 0 מתוך 0 שיעורים"
                    android:textAlignment="center"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 