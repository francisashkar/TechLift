<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/welcomeUserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/hello_user"
                android:textAppearance="@style/TextAppearance.TechLift.Headline"
                android:textSize="22sp" />

            <!-- אתגר יומי -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dailyChallengeCard"
                style="@style/Widget.TechLift.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/surface"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_challenge"
                        android:textAppearance="@style/TextAppearance.TechLift.Headline"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/daily_challenge_desc"
                        android:textAppearance="@style/TextAppearance.TechLift.Subtitle" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- מפות דרכים -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/roadmapsCard"
                style="@style/Widget.TechLift.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/surface"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/roadmaps"
                        android:textAppearance="@style/TextAppearance.TechLift.Headline"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/roadmaps_desc"
                        android:textAppearance="@style/TextAppearance.TechLift.Subtitle" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- סביבת תרגול -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/practiceCard"
                style="@style/Widget.TechLift.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/surface"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/practice"
                        android:textAppearance="@style/TextAppearance.TechLift.Headline"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/practice_desc"
                        android:textAppearance="@style/TextAppearance.TechLift.Subtitle" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- שאלות ראיון -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/interviewsCard"
                style="@style/Widget.TechLift.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/surface"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/interviews"
                        android:textAppearance="@style/TextAppearance.TechLift.Headline"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/interviews_desc"
                        android:textAppearance="@style/TextAppearance.TechLift.Subtitle" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- פרויקטים מוצעים -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/projectsCard"
                style="@style/Widget.TechLift.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/surface"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/projects"
                        android:textAppearance="@style/TextAppearance.TechLift.Headline"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/projects_desc"
                        android:textAppearance="@style/TextAppearance.TechLift.Subtitle" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- קהילה -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/communityCard"
                style="@style/Widget.TechLift.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/surface"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/community"
                        android:textAppearance="@style/TextAppearance.TechLift.Headline"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/community_desc"
                        android:textAppearance="@style/TextAppearance.TechLift.Subtitle" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>